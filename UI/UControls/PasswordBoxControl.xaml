<UserControl x:Class="ScramblerApp.UI.UControls.PasswordBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScramblerApp.UI.UControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <PasswordBox x:Name="PswBox" Height="30" Width="150" Margin="0 5 0 10" FontSize="18" ></PasswordBox>
            <TextBox x:Name="TxtBox" Height="30" Width="150" Margin="0 5 0 10" FontSize="18" Visibility="Collapsed"></TextBox>
            <CheckBox Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" >
                <TextBlock FontSize="18" Margin="0 -5 0 0">Показать пароль</TextBlock>
            </CheckBox>
        </StackPanel>
         
    </Grid>
</UserControl>
